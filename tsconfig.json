{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,

    "module": "ESNext",
    "moduleResolution": "Bundler",
    "moduleDetection": "force",

    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,

    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },

    "types": ["vite/client"],

    "allowJs": true,          // 允许导入 .js
    "checkJs": false,         // 不对 .js 做类型检查（需要可改为 true）
    "skipLibCheck": true,     // 跳过第三方声明检查，减少无关报错
    "noEmit": true            // 仅做类型检查，不产出编译物，避免覆盖手写 .js
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
